<Page
    x:Class="UWPCommunity.Views.DashboardView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPCommunity"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:UWPCommLib.Api.UWPComm.Models"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    mc:Ignorable="d">

    <controls:DockPanel LastChildFill="True">

        <controls:DockPanel Background="{ThemeResource SystemAccentColor}" Height="120" controls:DockPanel.Dock="Top"
                            HorizontalAlignment="Stretch" LastChildFill="True">
            <StackPanel x:Name="UserProfilePanel" Orientation="Horizontal"
                        Margin="10,10,0,10" controls:DockPanel.Dock="Left">
                <PersonPicture x:Name="UserProfilePicture"/>
                <TextBlock x:Name="UserProfileUsername" Text="Username"
                            FontWeight="SemiBold" Foreground="{StaticResource SystemAltHighColor}"
                            Style="{StaticResource SubheaderTextBlockStyle}" VerticalAlignment="Center"
                            Margin="10,0,0,0"/>
            </StackPanel>

            <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <AppBarButton x:Name="RegisterAppButton" Label="Register an app" Style="{StaticResource AppBarButtonRevealStyle}" Foreground="{StaticResource SystemAltHighColor}" Click="RegisterAppButton_Click">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="Assets/FabricMDL2Assets.ttf#Fabric External MDL2 Assets" Glyph="&#xEFDA;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                    <AppBarButton Label="Manage roles" Style="{StaticResource AppBarButtonRevealStyle}" Foreground="{StaticResource SystemAltHighColor}" IsEnabled="False">
                        <AppBarButton.Icon>
                            <FontIcon FontFamily="Assets/FabricMDL2Assets.ttf#Fabric External MDL2 Assets" Glyph="&#xE99A;" />
                        </AppBarButton.Icon>
                    </AppBarButton>
                </StackPanel>
            </Viewbox>
        </controls:DockPanel>
        
        <!-- TODO: Figure out how to keep this DropShadow above the GridView -->
        <!--Rectangle controls:DockPanel.Dock="Top" Height="30" Margin="0,0,0,-30" >
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#55000000" Offset="0.0"/>
                    <GradientStop Color="#00000000" Offset="1.0"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle-->

        <GridView ItemsSource="{x:Bind Projects}" IsItemClickEnabled="True" CanDragItems="False" Padding="10,10,10,0"
                  AllowDrop="False" CanReorderItems="False" SelectionMode="None" FlowDirection="LeftToRight">

            <GridView.ItemTemplate>
                <DataTemplate x:DataType="models:Project">
                    <!-- TODO: Create a template for showing projects-->

                    <controls:DropShadowPanel BlurRadius="20" OffsetY="2" ShadowOpacity="0.5" >
                        <controls:DockPanel LastChildFill="True" Padding="5,5,5,5" HorizontalAlignment="Stretch"
                                            Background="{ThemeResource SystemRevealChromeMediumColor}">

                            <controls:DockPanel.ContextFlyout>
                                <MenuFlyout>
                                    <MenuFlyoutItem Text="Edit" Icon="Edit"/>
                                    <MenuFlyoutItem Text="Delete" Icon="Delete"/>
                                </MenuFlyout>
                            </controls:DockPanel.ContextFlyout>

                            <Image MaxWidth="150" Margin="0,0,5,0" controls:DockPanel.Dock="Left">
                                <Image.Source>
                                    <BitmapImage UriSource="{x:Bind HeroImageUri}"/>
                                </Image.Source>
                            </Image>

                            <StackPanel controls:DockPanel.Dock="Right" Spacing="5">
                                <Button>
                                    <Button.Content>
                                        <SymbolIcon Symbol="Edit"/>
                                    </Button.Content>
                                </Button>

                                <Button>
                                    <Button.Content>
                                        <SymbolIcon Symbol="Delete"/>
                                    </Button.Content>
                                </Button>
                            </StackPanel>

                            <StackPanel Orientation="Vertical">
                                <TextBlock Text="{x:Bind AppName}" Margin="0,0,5,0" Style="{StaticResource BaseTextBlockStyle}" />
                                <TextBlock Text="{x:Bind Description}" Margin="0,0,5,0" Style="{StaticResource BodyTextBlockStyle}" TextWrapping="WrapWholeWords"/>
                                <StackPanel Orientation="Vertical"/>
                            </StackPanel>

                        </controls:DockPanel>
                    </controls:DropShadowPanel>

                </DataTemplate>
            </GridView.ItemTemplate>
            
            <GridView.Header>
                <StackPanel Orientation="Horizontal" Spacing="10">
                    <FontIcon FontFamily="Assets/FabricMDL2Assets.ttf#Fabric External MDL2 Assets"
                              Glyph="&#xEFDE;" FontSize="30"/>
                    <TextBlock Text="My apps" Style="{StaticResource SubheaderTextBlockStyle}"
                               VerticalAlignment="Center"/>
                </StackPanel>
            </GridView.Header>

        </GridView>

    </controls:DockPanel>

</Page>

<Page
    x:Class="UWPCommunity.Views.UnhandledExceptionPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UWPCommunity.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource SystemAccentColor}">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{ThemeResource MediaTextThemeBrush}"/>
        </Style>
    </Page.Resources>

    <StackPanel Spacing="20" Margin="50">
        <TextBlock FontSize="100"
                   Text=":("/>
        <TextBlock FontSize="24" FontWeight="SemiBold"
                   Text="UWP Community App ran into an unexpected error."/>
        <TextBox FontSize="24" Text="{x:Bind Path=ExceptionText}" AcceptsReturn="True"
                 IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Auto"
                 TextWrapping="Wrap">
            <TextBox.Header>
                <TextBlock Text="Exception:"/>
            </TextBox.Header>
        </TextBox>
    </StackPanel>
</Page>
